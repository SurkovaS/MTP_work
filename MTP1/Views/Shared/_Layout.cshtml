<!DOCTYPE html>
<html>
<head>
    <title>@this.ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui-1.8.20.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/mega-menu/dcmegamenu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/mega-menu/blue.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.dcmegamenu.1.3.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.hoverIntent.minified.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    ИС "Управление процессом тестирования"/ MTP</h1>
            </div>
            <div class="blue">
                <ul id="menu" class="mega-menu">
                    <li><a href="@Url.Action("Index", "Project")">Проекты</a></li>
                    <li><a href="@Url.Action("Index", "UseCase")">UseCase</a></li>
                    <li><a href="@Url.Action("Index", "Dictionaries")">Справочники</a></li>
                    <li><a href="@Url.Action("About", "Home")">О программе</a></li>
                </ul>
            </div>
            <div style="height: 10px;">
            </div>
        </div>
        <div id="main">
            @this.RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
     <script type="text/javascript">
         $(function () {
             $('#menu').dcMegaMenu({
                 rowItems: '4',
                 speed: 'fast'
             });
         });
    </script>
</body>
</html>
