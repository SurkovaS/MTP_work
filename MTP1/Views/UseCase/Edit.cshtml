@using MTP1
@model MTP1.Models.UseCase
      
@{
    ViewBag.Title = string.Format("Редактирование | {0}", Constants.TITLE);
 }

<script src="@this.Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@this.Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

<p>
    @Html.ActionLink("Отменить", "Index") | @Html.ActionLink("Сценарии тестирования", "Index")
</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактирование</legend>
        @Html.EditorForModel()       
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}
