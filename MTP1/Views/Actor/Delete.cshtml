@using MTP1
@model MTP1.Models.Actor

@{
    this.ViewBag.Title = string.Format("Актор. Удаление | {0}", Constants.TITLE);

}
<fieldset>
    <legend>Актор. Удаление "@Model.TechnicalFactorDic.Title"</legend>
    @this.Html.ActionLink("Отменить", "Index")

    <h2 style="color: Red">Вы уверены, что хотите удалить эту запись?</h2>
     @using (this.Html.BeginForm())
    {
        <input type="submit" value="Удалить" />
    }
    <div class="display-label">Use Case</div>
    <div class="display-field">
        @this.Html.DisplayFor(model => model.UseCase1.Title)
    </div>
    <div class="display-label">Актор</div>
    <div class="display-field">
        @this.Html.DisplayFor(model => model.TechnicalFactorDic.Title)
    </div>
    <div class="display-label">Весовой коэффициент</div>
    <div class="display-field">
        @this.Html.DisplayFor(model => model.WeightCoefficientDic.Value) (@this.Html.DisplayFor(model => model.WeightCoefficientDic.Title))
    </div>
    <div class="display-label">Количество</div>
    <div class="display-field">
        @this.Html.DisplayFor(model => model.Quantity) (@this.Html.DisplayFor(model => model.WeightCoefficientDic.Title))
    </div>

</fieldset>