@using MTP1
@using MTP1.Models
@model IEnumerable<Actor>

@{
    this.ViewBag.Title = string.Format("Акторы | {0}", Constants.TITLE);

}
<h2>Акторы</h2>

<p>
    @this.Html.ActionLink("Создать", "Create")

</p>
<table>
    <tr>
        <th>
            Use Case
        </th>
        <th>
            Актор
        </th>
        <th>
            Весовой коэффициент
        </th>
        <th>
            Количество
        </th>
    </tr>

    @foreach (Actor item in this.Model)
    {
        <tr>
            <td>
                @this.Html.DisplayFor(modelItem => item.UseCase1.Title)
            </td>
            <td>
                @this.Html.ActionLink(item.ActorDic.Title, "Details", new { id = item.ID })
            </td>
            <td>
                @this.Html.DisplayFor(modelItem => item.WeightCoefficientDic.Value)
            </td>
            <td>
                @this.Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @this.Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                @this.Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
       
    }
</table>
<p>
   
</p>