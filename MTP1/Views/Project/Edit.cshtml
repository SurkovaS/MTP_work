@using MTP1
@model MTP1.Models.Project

         

@{
    this.ViewBag.Title = string.Format("Редактирование проекта | {0}", Constants.TITLE);

}



@this.Html.ActionLink("Отменить", "Index") | @this.Html.ActionLink("Проекты", "Index")
<h2></h2>

<script src="@this.Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@this.Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

@using (this.Html.BeginForm())
{
    @this.Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактирование проекта тестирования @this.Model.Title</legend>
        @this.Html.EditorForModel()       
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}
