@using MTP1
@using MTP1.Models
@model IEnumerable<PriorityDic>
@{
    ViewBag.Title = string.Format("Элементы справочника | {0}", Constants.TITLE);
}
<link href="@Url.Content("~/Content/List.css")" rel="stylesheet" type="text/css" />
<div id="grid_container" style="width: 100%">
    <table id="grid" cellpadding="0" cellspacing="0">
    </table>
    <div id="pager" style="text-align: center;">
    </div>
    <div id="search" style="margin-left: 30%; display: none">
    </div>
</div>

<script type="text/javascript">

    $(function () {

        var indexUrl = '@Url.Action("GetPriorities", "PriorityDic")';
        var editUrl = '@Url.Action("Edit", "PriorityDic")';
        var deleteUrl = '@Url.Action("Delete", "PriorityDic")';
        var addUrl = '@Url.Action("Create", "PriorityDic")';
        var viewUrl = '@Url.Action("Details", "PriorityDic")';

        DrawMTPGrid('grid', 'pager', indexUrl, editUrl, deleteUrl, addUrl, viewUrl,
            ['Наименование', 'Описание','Значение'],
            [
                {
                    name: 'Title',
                    sortable: false,
                    align: 'center',
                    width: '250'
                },
                {
                    name: 'Description',
                    sortable: false,
                    align: 'center',
                    width: '100'
                },
                {
                    name: 'Value',
                    sortable: false,
                    align: 'center',
                    width: '100'
                }
            ], 'Справочник: Приоритеты');
    });

</script>