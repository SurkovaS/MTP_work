@using MTP1
@model MTP1.Models.TestMethodDic       

@{
    ViewBag.Title = string.Format("Редактирование | {0}", Constants.TITLE);
}

<p>
    @Html.ActionLink("Отменить", "Index") |
    @Html.ActionLink("Методы тестирования", "Index")
</p>

<script src="@this.Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@this.Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

@using (this.Html.BeginForm())
{
    @this.Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактирование элемента справочника "@this.Model.Title"</legend>
        @this.Html.EditorForModel()       
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @this.Html.ActionLink("Методы тестирования", "Index")
</div>