@using MTP1
@model IEnumerable<MTP1.Models.TestProgram>
           
@{
    ViewBag.Title = string.Format("Программы тестирования| {0}", Constants.TITLE);
}

<link href="@Url.Content("~/Content/List.css")" rel="stylesheet" type="text/css" />

<div id="grid_container" style="width: 100%">
    <table id="grid" cellpadding="0" cellspacing="0">
    </table>
    <div id="pager" style="text-align: center;">
    </div>
    <div id="search" style="margin-left: 30%; display: none">
    </div>
</div>

<script type="text/javascript">
    var indexUrl = '@Url.Action("GetPrograms", "TestProgram")';
    var editUrl = '@Url.Action("Edit", "TestProgram")';
    var deleteUrl = '@Url.Action("Delete", "TestProgram")';
    var addUrl = '@Url.Action("Create", "TestProgram")';
    var viewUrl = '@Url.Action("Details", "TestProgram")';

    $(function () {
        DrawMTPGrid('grid', 'pager', indexUrl, editUrl, deleteUrl, addUrl, viewUrl,
        ['Программа тестирования', 'Описание программы', 'Плановая дата начала',
        'Плановая дата окончания', 'Фактическая дата начала', 'Фактическая дата окончания',
        'Проект'],
        [
                {
                    name: 'Title',
                    sortable: false,
                    align: 'center',
                    width: '250'
                },
                {
                    name: 'Description',
                    sortable: false,
                    align: 'center',
                    width: '300'
                },
                {
                    name: 'BeginDatePlan',
                    sortable: false,
                    align: 'center',
                    width: '200'
                },
               {
                   name: 'EndDatePlan',
                   sortable: false,
                   align: 'center',
                   width: '200'
               },
                {
                    name: 'BeginDateActual',
                    sortable: false,
                    align: 'center',
                    width: '200'
                },
                {
                    name: 'EndDateActual',
                    sortable: false,
                    align: 'center',
                    width: '200'
                },
                {
                    name: 'Project',
                    sortable: false,
                    align: 'center',
                    width: '200'
                }
            ],'Программы тестирования');
    });

</script>
