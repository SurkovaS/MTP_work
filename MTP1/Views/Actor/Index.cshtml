@using MTP1
@using MTP1.Models
@model IEnumerable<Actor>
@{
    this.ViewBag.Title = string.Format("Акторы | {0}", Constants.TITLE);

}
<link href="@this.Url.Content("~/Content/List.css")" rel="stylesheet" type="text/css" />
<div id="grid_container" style="width: 100%">
    <table id="grid" cellpadding="0" cellspacing="0">
    </table>
    <div id="pager" style="text-align: center;">
    </div>
    <div id="search" style="margin-left: 30%; display: none">
    </div>
</div>
<script type="text/javascript">
    var indexUrl = '@Url.Action("GetActors", "Actor")';
    var editUrl = '@Url.Action("Edit", "Actor")';
    var deleteUrl = '@Url.Action("Delete", "Actor")';
    var addUrl = '@Url.Action("Create", "Actor")';
    var viewUrl = '@Url.Action("Details", "Actor")';
    


    $(function () {

         DrawMTPGrid('grid', 'pager', indexUrl, editUrl, deleteUrl, addUrl, viewUrl,
		['Сценарий тестирования', 'Актор', 'Весовой коэффициент', 'Количество'],
           	[
                {
                    name: 'UseCase',
                    sortable: false,
                    align: 'center',
                    width: '250'
                },
                {
                    name: 'Actor',
                    sortable: false,
                    align: 'center',
                    width: '100'
                },
                {
                    name: 'WeightCoefficient',
                    sortable: false,
                    align: 'left',
                    width: '50'
                },
                {
                    name: 'Quantity',
                    sortable: false,
                    align: 'left',
                    width: '50'
                }
            ]);

    });

</script>

