@using MTP1
@model MTP1.Models.Actor

@{
    this.ViewBag.Title = string.Format("Актор. Создание | {0}", Constants.TITLE);

}

<script src="@this.Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@this.Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>


@using (this.Html.BeginForm())
{
    <fieldset>
        <legend>Актор. Создание</legend>
        @this.Html.ActionLink("Отменить", "Index")
        @this.Html.EditorForModel()
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @this.Html.ActionLink("Акторы", "Index")
</div>