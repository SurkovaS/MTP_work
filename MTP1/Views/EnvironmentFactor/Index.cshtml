@using MTP1
@using MTP1.Models
@model IEnumerable<EnvironmentFactor>

@{
    this.ViewBag.Title = string.Format("Факторы окружения | {0}", Constants.TITLE);

}
<h2>Факторы окружения</h2>

<p>
    @this.Html.ActionLink("Создать", "Create")

</p>
<table>
    <tr>
        <th>
            Use Case
        </th>
        <th>
            Фактор окружения
        </th>
        <th>
            Весовой коэффициент
        </th>
        <th>
            Сложность
        </th>
    </tr>

    @foreach (EnvironmentFactor item in this.Model)
    {
        <tr>
            <td>
                @this.Html.DisplayFor(modelItem => item.UseCase1.Title)
            </td>
            <td>
                @this.Html.ActionLink(item.EnvironmentFactorDic.Title, "Details", new { id = item.ID })
            </td>
            <td>
                @this.Html.DisplayFor(modelItem => item.WeightCoefficientDic.Value)
            </td>
            <td>
                @this.Html.DisplayFor(modelItem => item.WeightCoefficientDic.Value)
            </td>
            <td>
                @this.Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                @this.Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
        
    }
</table>
